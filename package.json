{
  "name": "socket.io",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "prettier": "prettier --single-quote --write '{src,__test__}/**/*.{ts,js,json}'",
    "lint:fix": " npx tslint --fix --config tslint.json './**/*.{js}'"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "mongoose": "^5.11.12",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3",
    "validate-commit-msg": "^2.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "{src,__test__}/**/*.{ts,tsx,js}": [
      "npm run prettier",
      "npm run lint:fix",
      "git add *"
    ]
  }
}
